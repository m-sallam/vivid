<!DOCTYPE html>
<html>

<head>
  <meta charset='UTF-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <meta name='description' content=''>
  <meta name='author' content=''>

  <title>Vivid</title>

  <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,900" rel="stylesheet">
  <link rel='stylesheet' type='text/css' href='/css/fontawesome-all.min.css'>
  <link rel='stylesheet' type='text/css' href='/css/bootstrap.min.css'>
  <link rel='stylesheet' type='text/css' href='/css/selectize.default.css'>
  <link rel='stylesheet' type='text/css' href='/css/login.css'>
</head>

<body>

  <div class="master-content">
    <div class="container">
      <div class="row justify-content-center align-items-center form-wrapper">
        <div class="col-12">
          <h1 class="logo">Vivid</h1>
          <form action="/client/register" method="post" class="login-form">
            <div class="form-header">
              <h1>Register</h1>
            </div>
            <div class="fields">
              <div class="input-row">
                <input class="text-input" type="email" id="email" name="email">
                <label class="text-input-label" for="email">Email</label>
              </div>
              <div class="input-row">
                <input class="text-input" type="username" id="username" name="username">
                <label class="text-input-label" for="username">Username</label>
              </div>
              <div class="input-row">
                <input class="text-input" type="name" id="name" name="name">
                <label class="text-input-label" for="name">Name</label>
              </div>
              <div class="input-row">
                <input class="text-input" type="country" id="country" name="country">
                <label class="text-input-label" for="country">Country</label>
              </div>
              <div class="input-row">
                <input class="text-input" type="password" id="password" name="password">
                <label class="text-input-label" for="password">Password</label>
              </div>
              <div class="input-row multi-select-row">
                <select name="languages" id="languages-select" multiple>
                  <option value=""></option>
                  <option value="AR">Arabic</option>
                  <option value="EN">English</option>
                  <option value="FR">French</option>
                  <option value="GER">German</option>
                  <option value="SP">Spanish</option>
                  <option value="IT">Italian</option>
                </select>
                <label class="text-input-label" for="languages-select">Languages</label>
              </div>
              <div class="input-row submit-row">
                <input type="submit" class="submit-form">
              </div>
              <div class="links">
                <a href="/client/login" class="navigation-link">Already registered?</a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- *************************************************************************** -->
  <script type='text/javascript' src='/js/libs/jquery-3.3.1.min.js'></script>
  <script type='text/javascript' src='/js/libs/bootstrap.min.js'></script>
  <script type='text/javascript' src='/js/libs/selectize.min.js'></script>
  <script type='text/javascript' src='/js/login.js'></script>
  <!-- *************************************************************************** -->

</body>

</html>